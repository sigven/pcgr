citHeader("To cite the DGG Variant Interpretation Engine in publications use:")

citEntry(
  entry = "Software",
  title = "DGG Variant Interpretation Engine: automated classification of genomic variants for clinical reporting",
  author = personList(
    as.person("Vincent Laufer")
  ),
  year = "2024",
  url = "https://github.com/LauferVA/dgg_rules_somatic",
  textVersion = paste0(
    "Vincent Laufer. DGG Variant Interpretation Engine: automated classification of genomic variants for clinical reporting (2024). ",
    "https://github.com/LauferVA/dgg_rules_somatic"
  )
)

